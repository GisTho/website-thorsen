<%= render "partials/background" %>
<%= render "partials/nav" %>

<div class="container__box container__box-extra-small container__box-background container__box-borders">
  <div class="font__header2 font__color-default-header font__shadow-small font__header--medium font--padding-bottom">
    <%= "Log in" %>
  </div>
  <br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group container__div--centered">
      <div class="font__data font__color-default-data">
        <%= f.label "E-mail" %>
      </div>
      <%= f.email_field :email, class: "form-control input__data-centered input--background", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group container__div--centered">
      <div class="font__data font__color-default-data">
        <%= f.label "Password" %>
      </div>
      <%= f.password_field :password, class: "form-control input__data-centered input--padding-bottom input--background", autocomplete: "true" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="font__data font__color-default-data">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            <span class="checkmark"></span>
          </label>
          <%= f.label "Remember me" %>
        </div>
      </div>
    <% end -%>
    <br>

    <div class="btn btn-outline-light btn--font-large button--background button__container--margin">
      <input type="submit" value="Log in" class="button__container button__container--text-small">
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<%= render "partials/footer" %>



