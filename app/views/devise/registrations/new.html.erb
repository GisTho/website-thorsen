<%= render "partials/background" %>
<%= render "partials/nav" %>

<div class="container__box container__box-extra-small container__box-background container__box-borders">
  <div class="font__header2 font__color-default-header font__shadow-small font__header--medium font--padding-bottom">
    <%= "Sign Up" %>
  </div>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group container__div--centered">
      <div class="font__data font__color-default-data">
        <%= f.label "E-mail" %>
      </div>
      <%= f.email_field :email, class: "form-control input__data-centered input--background", autofocus: true, autocomplete: "email", placeholder: "address@example.com" %>
    </div>

    <div class="form-group container__div--centered">
      <div class="font__data font__color-default-data">
        <%= f.label "New Password" %>
      </div>
      <%= f.password_field :password, class: "form-control input__data-centered input--padding-bottom input--background", autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum" %>
      <br>
      <%= f.password_field :password_confirmation, class: "form-control input__data-centered input--background", autocomplete: "off", placeholder: "Has to be identical" %>
    </div>
    <br>

    <div class="btn btn-outline-light btn--font-large button--background button__container--margin">
      <input type="submit" value="Sign up" class="button__container button__container--text-small">
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<%= render "partials/footer" %>
