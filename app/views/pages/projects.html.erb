<%= render "partials/background" %>
<%= render "partials/nav" %>

<% if @projects.present? %>
  <% @projects.each do |project| %>
    <div class="container__box container__box-small container__box-background container__box-borders-full container__box--no-padding">
      <% if @projects.pictures.present? %>
        <div id="<%= project.title.gsub(/\s+/, "_") %>" class="carousel slide middleground" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @projects.pictures.each_with_index do |picture, index| %>
              <% if index == 0 %>
                <li data-target="#<%= project.title.gsub(/\s+/, "_") %>" data-slide-to="<% index %>" class="active"></li>
              <% else %>
                <li data-target="#<%= project.title.gsub(/\s+/, "_") %>" data-slide-to="<% index %>"></li>
              <% end %>
            <% end %>
          </ol>
          <% @projects.pictures.each_with_index do |picture, index| %>
            <div class="carousel-inner">
              <% if index == 0 %>
                <div class="carousel-item active">
                  <img class="d-block card-img-top w-100" src="<%= picture.source %>">
                  <% if picture.caption.present? %>
                    <div class="carousel-caption d-none d-md-block">
                      <div class="font__caption"><% picture.caption %></div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="carousel-item">
                  <img class="d-block card-img-top w-100" src="<%= picture.source %>">
                  <% if picture.caption.present? %>
                    <div class="carousel-caption d-none d-md-block">
                      <div class="font__caption"><%= picture.caption %></div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
          <a class="carousel-control-prev" href="#<%= project.title.gsub(/\s+/, "_") %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#<%= project.title.gsub(/\s+/, "_") %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>
      <div class="card-body">
        <div class="font__header2 font__color-default-header font__shadow-small">
          <%= project.title %>
        </div>
        <div class="font__data font__color-default-data font__data-justified">
          <%= project.description %>
          <% if false %>
            <p class="card-text"><small class="text-muted">Last updated ? mins ago</small></p>
          <% end %>
        </div>
        <% if project.source.present? %>
          <div style="text-align: left; padding-top: 8px;">
            <form action="<%= project.source %>" class="btn btn-outline-light">
              <i class="fa fa-search"></i>
              <input type="submit" value="Go to Project" style="border:none; background: none; color: inherit; padding: 0; font: inherit; outline: inherit; cursor: pointer;"/>
            </form>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>


